{
  "manifest_version": 3,
  "name": "Costcoholic",
  "version": "1.2",
  "description": "Costcoholic downloads your Costco receipts and shows a detailed spending dashboard.",
  "options_page": "src/options/options.html",
  "content_scripts": [
    {
      "matches": ["https://www.costco.com/*", "https://www.costco.ca/*"],
      "js": ["src/content/content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Costcoholic",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://www.costco.com/*",
    "https://www.costco.ca/*",
    "https://ecom-api.costco.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/dashboard/dashboard.html", "src/dashboard/dashboard.css", "src/dashboard/dashboard.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
